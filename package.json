{
  "name": "factual-language",
  "displayName": "Factual Language",
  "description": "Syntax highlighting for the Factual language",
  "version": "0.1.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/jinaga/factual-language.git"
  },
  "engines": {
    "vscode": "^1.96.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "contributes": {
    "languages": [
      {
        "id": "factual-specification",
        "aliases": [
          "Factual Specification",
          "factual-specification"
        ],
        "extensions": [
          ".specification.fact"
        ],
        "configuration": "./language-configuration.json"
      },
      {
        "id": "factual-model",
        "aliases": [
          "Factual Model",
          "factual-model"
        ],
        "extensions": [
          ".model.fact"
        ],
        "configuration": "./language-configuration.json"
      },
      {
        "id": "factual-scenario",
        "aliases": [
          "Factual Scenario",
          "factual-scenario"
        ],
        "extensions": [
          ".scenario.fact"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "factual-specification",
        "scopeName": "source.factual.specification",
        "path": "./syntaxes/factual-specification.tmLanguage.json"
      },
      {
        "language": "factual-model",
        "scopeName": "source.factual.model",
        "path": "./syntaxes/factual-model.tmLanguage.json"
      },
      {
        "language": "factual-scenario",
        "scopeName": "source.factual.scenario",
        "path": "./syntaxes/factual-scenario.tmLanguage.json"
      }
    ]
  }
}
