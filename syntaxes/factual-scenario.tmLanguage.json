{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Factual Scenario",
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#operators"
		},
		{
			"include": "#types"
		},
		{
			"include": "#numbers"
		},
		{
			"include": "#booleans"
		},
		{
			"include": "#predecessors"
		},
		{
			"include": "#properties"
		},
		{
			"include": "#punctuation"
		},
		{
			"include": "#identifiers"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [
				{
					"name": "keyword.other.factual-scenario",
					"match": "\\b(?:given|when|then|and|fact)\\b"
				}
			]
		},
		"strings": {
			"name": "string.quoted.double.factual-scenario",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.factual-scenario",
					"match": "\\\\."
				}
			]
		},
		"operators": {
			"patterns": [
				{
					"name": "keyword.operator.factual-scenario",
					"match": "->|=|\\."
				}
			]
		},
		"types": {
			"patterns": [
				{
					"name": "entity.name.type.factual-scenario",
					"match": "(?<=fact\\s+)\\b[A-Z][a-zA-Z0-9_]*\\b"
				}
			]
		},
		"numbers": {
			"patterns": [
				{
					"name": "constant.numeric.factual-scenario",
					"match": "-?\\b\\d+(?:\\.\\d+)?(?:e[+-]?\\d+)?\\b"
				}
			]
		},
		"booleans": {
			"patterns": [
				{
					"name": "constant.language.boolean.factual-scenario",
					"match": "\\b(?:false|true)\\b"
				}
			]
		},
		"predecessors": {
			"patterns": [
				{
					"name": "entity.name.function.factual-scenario",
					"match": "(?<=->\\s*)[a-zA-Z_][a-zA-Z0-9_]*"
				}
			]
		},
		"properties": {
			"patterns": [
				{
					"name": "variable.other.property.factual-scenario",
					"match": "(?<=\\.)[a-zA-Z_][a-zA-Z0-9_]*"
				}
			]
		},
		"punctuation": {
			"patterns": [
				{
					"name": "punctuation.definition.factual-scenario",
					"match": "[()\\[\\]{}:]"
				}
			]
		},
		"identifiers": {
			"patterns": [
				{
					"name": "variable.parameter.factual-scenario",
					"match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b"
				}
			]
		}
	},
	"scopeName": "source.factual.scenario"
}
