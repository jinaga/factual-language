{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Factual Scenario",
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include": "#operators"
		},
		{
			"include": "#punctuation"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#numbers"
		},
		{
			"include": "#booleans"
		},
		{
			"include": "#types"
		},
		{
			"include": "#identifiers"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [
				{
					"name": "keyword.other.factual-scenario",
					"match": "\\blet\\b"
				}
			]
		},
		"operators": {
			"patterns": [
				{
					"name": "keyword.operator.factual-scenario",
					"match": ":|=|,"
				}
			]
		},
		"punctuation": {
			"patterns": [
				{
					"name": "punctuation.definition.factual-scenario",
					"match": "[\\[\\]{}]"
				}
			]
		},
		"strings": {
			"name": "string.quoted.double.factual-scenario",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.factual-scenario",
					"match": "\\\\."
				}
			]
		},
		"numbers": {
			"patterns": [
				{
					"name": "constant.numeric.factual-scenario",
					"match": "-?\\b\\d+(?:\\.\\d+)?(?:e[+-]?\\d+)?\\b"
				}
			]
		},
		"booleans": {
			"patterns": [
				{
					"name": "constant.language.boolean.factual-scenario",
					"match": "\\b(?:false|true)\\b"
				}
			]
		},
		"types": {
			"patterns": [
				{
					"name": "entity.name.type.factual-scenario",
					"match": "(?<=:\\s*)\\b[a-zA-Z][a-zA-Z0-9_]*(\\.[a-zA-Z][a-zA-Z0-9_]*)*\\b"
				}
			]
		},
		"identifiers": {
			"patterns": [
				{
					"name": "variable.parameter.factual-scenario",
					"match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b"
				}
			]
		}
	},
	"scopeName": "source.factual.scenario"
}
