{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Factual",
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#identifiers"
		},
		{
			"include": "#operators"
		},
		{
			"include": "#types"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [
				{
					"name": "keyword.let.factual",
					"match": "\\blet\\b"
				}
			]
		},
		"strings": {
			"name": "string.quoted.double.factual",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.factual",
					"match": "\\\\."
				}
			]
		},
		"identifiers": {
			"patterns": [
				{
					"name": "variable.factual",
					"match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b"
				}
			]
		},
		"operators": {
			"patterns": [
				{
					"name": "operator.type.factual",
					"match": ":"
				}
			]
		},
		"types": {
			"patterns": [
				{
					"name": "type.factual",
					"match": "(?<=:)\\s*\\b[a-zA-Z_][\\.a-zA-Z0-9_]*\\b|\\b[a-zA-Z_][\\.a-zA-Z0-9_]*\\b"
				}
			]
		}
	},
	"scopeName": "source.factual"
}