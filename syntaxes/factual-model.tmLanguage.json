{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Factual Model",
	"patterns": [
		{
			"include": "#operators"
		},
		{
			"include": "#types"
		},
		{
			"include": "#punctuation"
		},
		{
			"include": "#keywords"
		},
		{
			"include": "#factTypes"
		},
		{
			"include": "#identifiers"
		}
	],
	"repository": {
		"operators": {
			"patterns": [
				{
					"name": "keyword.operator.factual-model",
					"match": ":|\\*|\\?"
				}
			]
		},
		"types": {
			"patterns": [
				{
					"name": "support.type.datetime.factual-model",
					"match": "\\bdatetime\\b"
				},
				{
					"name": "support.type.string.factual-model",
					"match": "\\bstring\\b"
				},
				{
					"name": "support.type.number.factual-model",
					"match": "\\bnumber\\b"
				},
				{
					"name": "support.type.boolean.factual-model",
					"match": "\\bboolean\\b"
				}
			]
		},
		"punctuation": {
			"patterns": [
				{
					"name": "punctuation.definition.factual-model",
					"match": "[{}]"
				}
			]
		},
		"keywords": {
			"patterns": [
				{
					"name": "keyword.declaration.factual-model",
					"match": "\\bfact\\b"
				}
			]
		},
		"factTypes": {
			"patterns": [
				{
					"name": "entity.name.type.factual-model",
					"match": "(?<=\\bfact\\s+|:\\s*)\\b[a-zA-Z][a-zA-Z0-9_]*(\\.[a-zA-Z][a-zA-Z0-9_]*)*\\b"
				}
			]
		},
		"identifiers": {
			"patterns": [
				{
					"name": "variable.parameter.factual-model",
					"match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b"
				}
			]
		}
	},
	"scopeName": "source.factual.model"
}
