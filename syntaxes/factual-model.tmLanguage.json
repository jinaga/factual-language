{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Factual Model",
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#operators"
		},
		{
			"include": "#types"
		},
		{
			"include": "#numbers"
		},
		{
			"include": "#booleans"
		},
		{
			"include": "#predecessors"
		},
		{
			"include": "#properties"
		},
		{
			"include": "#punctuation"
		},
		{
			"include": "#identifiers"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [
				{
					"name": "keyword.other.factual-model",
					"match": "\\b(?:type|field)\\b"
				}
			]
		},
		"strings": {
			"name": "string.quoted.double.factual-model",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.factual-model",
					"match": "\\\\."
				}
			]
		},
		"operators": {
			"patterns": [
				{
					"name": "keyword.operator.factual-model",
					"match": "->|:"
				}
			]
		},
		"types": {
			"patterns": [
				{
					"name": "entity.name.type.factual-model",
					"match": "(?<=type\\s+)\\b[A-Z][a-zA-Z0-9_]*\\b"
				}
			]
		},
		"numbers": {
			"patterns": [
				{
					"name": "constant.numeric.factual-model",
					"match": "-?\\b\\d+(?:\\.\\d+)?(?:e[+-]?\\d+)?\\b"
				}
			]
		},
		"booleans": {
			"patterns": [
				{
					"name": "constant.language.boolean.factual-model",
					"match": "\\b(?:false|true)\\b"
				}
			]
		},
		"predecessors": {
			"patterns": [
				{
					"name": "entity.name.function.factual-model",
					"match": "(?<=->\\s*)[a-zA-Z_][a-zA-Z0-9_]*"
				}
			]
		},
		"properties": {
			"patterns": [
				{
					"name": "variable.other.property.factual-model",
					"match": "(?<=field\\s+)[a-zA-Z_][a-zA-Z0-9_]*"
				}
			]
		},
		"punctuation": {
			"patterns": [
				{
					"name": "punctuation.definition.factual-model",
					"match": "[()\\[\\]{}:]"
				}
			]
		},
		"identifiers": {
			"patterns": [
				{
					"name": "variable.parameter.factual-model",
					"match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b"
				}
			]
		}
	},
	"scopeName": "source.factual.model"
}
