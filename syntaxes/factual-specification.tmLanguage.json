{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Factual Specification",
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#operators"
		},
		{
			"include": "#types"
		},
		{
			"include": "#numbers"
		},
		{
			"include": "#booleans"
		},
		{
			"include": "#predecessors"
		},
		{
			"include": "#properties"
		},
		{
			"include": "#punctuation"
		},
		{
			"include": "#identifiers",
			"fileTypes": [
				"specification.fact"
			]
		}
	],
	"repository": {
		"keywords": {
			"patterns": [
				{
					"name": "keyword.other.factual-specification",
					"match": "\\blet\\b"
				}
			]
		},
		"strings": {
			"name": "string.quoted.double.factual-specification",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.factual-specification",
					"match": "\\\\."
				}
			]
		},
		"operators": {
			"patterns": [
				{
					"name": "keyword.operator.factual-specification",
					"match": "->|=>|#|=|\\.|!E|!|\\bE\\b"
				}
			]
		},
		"types": {
			"patterns": [
				{
					"name": "entity.name.type.factual-specification",
					"match": "(?<=:\\s*)\\b[a-zA-Z_][\\.a-zA-Z0-9_]*\\b"
				}
			]
		},
		"numbers": {
			"patterns": [
				{
					"name": "constant.numeric.factual-specification",
					"match": "-?\\b\\d+(?:\\.\\d+)?(?:e[+-]?\\d+)?\\b"
				}
			]
		},
		"booleans": {
			"patterns": [
				{
					"name": "constant.language.boolean.factual-specification",
					"match": "\\b(?:false|true)\\b"
				}
			]
		},
		"predecessors": {
			"patterns": [
				{
					"name": "entity.name.function.factual-specification",
					"match": "(?<=->\\s*)[a-zA-Z_][a-zA-Z0-9_]*"
				}
			]
		},
		"properties": {
			"patterns": [
				{
					"name": "variable.other.property.factual-specification",
					"match": "(?<=\\.\\s*)[a-zA-Z_][a-zA-Z0-9_]*"
				}
			]
		},
		"punctuation": {
			"patterns": [
				{
					"name": "punctuation.definition.factual-specification",
					"match": "[()\\[\\]{}:]"
				}
			]
		},
		"identifiers": {
			"patterns": [
				{
					"name": "variable.parameter.factual-specification",
					"match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b"
				}
			]
		}
	},
	"scopeName": "source.factual.specification"
}
